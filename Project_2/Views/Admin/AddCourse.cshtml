


@model Project_2.Models.Cours

@{
    ViewBag.Title = "Add New Course";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        header {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Add New Course</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.CourseName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Credits, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Credits, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.CourseMaterial, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CourseMaterial, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary">Add Course</button>
                }
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html> 
