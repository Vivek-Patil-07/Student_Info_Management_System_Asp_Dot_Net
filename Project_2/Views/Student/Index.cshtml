

@model Project_2.Models.Student

@{
    ViewBag.Title = "Student Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        header {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0">Welcome, @Model.FirstName @Model.LastName</h2>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="@Url.Action("Courses", "Student", new { id = Model.StudentId })" class="list-group-item list-group-item-action list-group-item-primary">
                        View Available Courses
                    </a>
                    <a href="@Url.Action("EnrolledCourses", "Student", new { id = Model.StudentId })" class="list-group-item list-group-item-action list-group-item-success">
                        View Enrolled Courses
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>


